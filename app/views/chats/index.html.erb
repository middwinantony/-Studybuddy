<h1>Quiz Sessions for <%= @topic.name %></h1>

<div class="mb-4">
  <% if @chats.any? %>
    <ul>
      <% @chats.each do |chat| %>
        <li><%= link_to chat.title, chat_path(chat) %> â€“ Score: <%= chat.score || 0 %>/<%= chat.attempts || 0 %></li>
