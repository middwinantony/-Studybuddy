<h2><%= @question %></h2>

<%= form_with url: check_answer_path, method: :post, local: true do |f| %>
  <div class="form-group mt-3">
    <%= f.label :answer, "Your Answer" %>
    <%= f.text_field :answer, class: "form-control" %>
  </div>

  <%= hidden_field_tag :question, @question %>

  <div class="mt-3">
    <%= f.submit "Submit Answer", class: "btn btn-primary" %>
  </div>
<% end %>

<% if @result.present? %>
  <div class="alert alert-info mt-3">
    <%= @result %>
  </div>
<% end %>
