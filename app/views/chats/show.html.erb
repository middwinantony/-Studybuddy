<% if Rails.env.development? %>
  <span class="float-end">
    Input tokens: <%= @input_tokens %> / Output tokens: <%= @output_tokens %> / Context window: <%= @context_window %>
  </span>
<% end %>

<hr>

<div class="container mt-5 text-center">
  <h2 class="display-6 fw-bold mb-4">Quiz on <%= @topic.name %></h2>

  <div class="card p-4 shadow-sm mb-4">
    <p class="lead"><strong>Question:</strong></p>
    <p class="fs-5"><%= @question_text %></p>
  </div>

  <div class="mt-4">
    <%= link_to "Back to Topics", topics_path, class: "btn btn-secondary btn-lg px-4 py-2 shadow-sm" %>
  </div>
</div>

<div id="messages">
  <%= render "messages/messages", messages: @chat.messages %>
</div>

<div id="new_message">
  <%= render "messages/form", chat: @chat, message: Message.new %>
</div>
