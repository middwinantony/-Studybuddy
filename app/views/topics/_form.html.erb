<%= form_with(model: topic, local: true) do |form| %>
  <!-- other fields -->

  <div class="field">
    <p><strong>Choose an image:</strong></p>
    <% Image.all.each do |image| %>
      <div style="margin-bottom: 10px;">
        <label>
          <%= radio_button_tag 'topic[image_id]', image.id, image.id == topic.image_id %>
          <% if image.file.attached? %>
            <%= image_tag image.file.variant(resize_to_limit: [100, 100]), alt: image.name %>
          <% end %>
          <span><%= image.name %></span>
        </label>
      </div>
    <% end %>
  </div>

  <%= form.submit %>
<% end %>
