<div class="container mt-5 text-center">
  <h2 class="display-6 fw-bold mb-4">Quiz on <%= @topic.name %></h2>

  <div class="card p-4 shadow-sm mb-4">
    <p class="lead"><strong>Question:</strong></p>
    <p class="fs-5"><%= @question_text %></p>
  </div>

  <div class="container my-5">
    <h2 class="text-center mb-4">Your answer Buddy</h2>
    <form class="d-flex flex-column gap-3">
      <textarea class="form-control" rows="4" placeholder="Type your answer here..."></textarea>
      <button type="submit" class="btn btn-primary align-self-end">Send</button>
    </form>
  </div>

  <div class="mt-4">
    <%= link_to "Back to Topics", topics_path, class: "btn btn-secondary btn-lg px-4 py-2 shadow-sm" %>
  </div>
</div>
