<% @topics.each do |topic| %>
<li>
  <%= topic.name %>
  <p><%= topic.description %></p>
  <%= link_to "Select Topic", topic_path(topic), class: "btn btn-primary" %>
  <% if topic.image_filename.present? %>
      <%= image_tag topic.image_filename, alt: topic.name %>
    <% end %>
</li>

<% end %>


<% if user_signed_in? %>
  <p>Welcome back!</p>
<% else %>
  <p>Please sign in.</p>
<% end %>

<%= link_to "Add Topic", new_topic_path, class: "btn btn-primary" %>
