<h2 class="text-center mb-4">Log in</h2> <!-- ✅ Added Bootstrap classes for heading -->

<div class="container"> <!-- ✅ Added container for layout -->
  <div class="row justify-content-center"> <!-- ✅ Centered the form horizontally -->
    <div class="col-md-6"> <!-- ✅ Made form half-width on medium+ screens -->

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email", class: "form-control" } %> <!-- ✅ Added Bootstrap input class -->

          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password", class: "form-control" } %> <!-- ✅ Added Bootstrap input class -->

          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions mt-3"> <!-- ✅ Added margin-top for spacing -->
          <%= f.button :submit, "Log in", class: "btn btn-primary w-100" %> <!-- ✅ Styled button with Bootstrap -->
        </div>
      <% end %>

      <div class="text-center mt-3"> <!-- ✅ Centered and spaced links -->
        <%= render "devise/shared/links" %>
      </div>

    </div>
  </div>
</div>
